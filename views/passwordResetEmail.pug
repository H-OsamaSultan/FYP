extends base

mixin navItem(link, text, icon, active)
    li(class=`${active ? 'side-nav--active' : ''}`)
        a(href=`${link}`)
            svg
                use(xlink:href=`img/icons.svg#icon-${icon}`)
            | #{text}

block header
    include _navigation
block content
    main.main
        .user-view
            .user-view__content.u-center-text
                h2.heading-secondary--form.ma-bt-md RESET MY PASSWORD
                p.paragraph Enter your email address below, and weâ€™ll send you a link to reset your password.
                .user-view__form-container
                   form.form.form-reset-request-email
                        .form__group.ma-bt-md
                            label.form__label(for='email').left Email address
                            input#email.form__input(type='email', required, name='email')
                        .form__group.right
                            button.btn.btn--small.btn--blue_form SEND

