extends base

block header
    include _navigation

block content
    .movie-filter-container
        p Search:
        input.search-term-input(name='keyword', autocomplete='off', type='search')
        .option-container
            .selects-container
                p Genre:
                select(name='genre')
                    option(value='28') Action
                    option(value='12') Adventure
                    option(value='16') Animation
                    option(value='35') Comedy
                    option(value='80') Crime
                    option(value='99') Documentary
                    option(value='18') Drama
                    option(value='10751') Family
                    option(value='14') Fantasy
                    option(value='36') History
                    option(value='27') Horror
                    option(value='10402') Musical
                    option(value='9648') Mystery
                    option(value='10749') Romance
                    option(value='878') Sci-Fi
                    option(value='53') Thriller
                    option(value='10752') War
                    option(value='37') Western
            .selects-container
                p Rating:
                select(name='rating')
                    option(value='9') 9+
                    option(value='8') 8+
                    option(value='7') 7+
                    option(value='6') 6+
                    option(value='5') 5+
                    option(value='4') 4+
                    option(value='3') 3+
                    option(value='2') 2+
                    option(value='1') 1+
            .selects-container
                p Year:
                select(name='year')
                    option(value='2010-01-01') 2010-2022
                    option(value='2000-01-01') 2000-2009
                    option(value='1990-01-01') 1990-1999
                    option(value='1980-01-01') 1980-1989
                    option(value='1970-01-01') 1970-1979
                    option(value='1960-01-01') 1960-1969
                    option(value='1950-01-01') 1950-1959
            .selects-container
                p Language:
                select(name='language')
                    option(value='en') English
                    option(value='fr') French
                    option(value='ja') Japanese
                    option(value='it') Italian
                    option(value='es') Spanish
                    option(value='de') German
                    option(value='zh') Chinese
                    option(value='ko') Korean
                    option(value='cn') Cantonese
                    option(value='hi') Hindi
                    option(value='ru') Russian
                    option(value='sv') Swedish
                    option(value='pl') Polish
                    option(value='th') Thai
                    option(value='nl') Dutch
                    option(value='vi') Vietnamese
                    option(value='ta') Tamil
                    option(value='te') Telugu
                    option(value='tr') Turkish
                    option(value='ar') Arabic
                    option(value='fa') Persian
                    option(value='el') Greek
                    option(value='ur') Urdu
                    option(value='ml') Malayalam
                    option(value='ms') Malay
                    option(value='pa') Punjabi
                    option(value='kn') Kannada
                    option(value='la') Latin
            .selects-container.selects-container-last
                p Order By:
                select(name='order_by')
                    option(value='primary_release_date.desc') Latest
                    option(value='primary_release_date.asc') Oldest
                    option(value='popularity.asc') Popularity
                    option(value='vote_average.asc') Rating
                    option(value='original_title.asc') Alphabetical
        button.btn.btn-movie-filter Search
    section.recommendations
        .film__list